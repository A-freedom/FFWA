extends layout

block content
    //form.was-validated.container-fluid(action='/users/register' method="POST")
    div.was-validated.container-fluid
        .form-group
            label.font-weight-bolder(for='username') Username:
            input#username.form-control(,type='text', placeholder='Enter username', name='username', required='')
            .invalid-feedback
            .error
        .form-group
            label.font-weight-bolder(for='password') Password:
            input#password.form-control(type='password', placeholder='Enter password', name='password', required='')
            .invalid-feedback
            .error
        .form-group
            label.font-weight-bolder(for='name') Name:
            input#name.form-control(type='text', placeholder='Enter name', name='name', required='')
            .invalid-feedback
            .error
        .form-group
            label.font-weight-bolder(for='email') Email:
            input#email.form-control(type='text', placeholder='Enter email', name='email', required='')
            .invalid-feedback
            .error
        .form-group.form-check
            label.font-weight-bolder.form-check-label
                input.form-check-input(type='checkbox',id='check', name='remember', required='')
                |  I agree on blabla .
                .invalid-feedback
        button.btn.btn-primary(type='submit',id='submitRegister') Submit
        h6
            br
            a(href='/users/login')
                I have an account
